<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Acc.DayNight" parent="Theme.Acc"/>

    <style name="Theme.Acc" parent="Base.Theme.Acc">
        <item name="colorPrimary">@color/acc_ocean</item>
        <item name="colorAccent">@color/acc_ocean</item>
        <item name="android:colorBackground">@color/acc_white</item>
        <item name="colorSurface">@color/acc_white</item>
        <item name="colorSecondary">@color/acc_grey_100</item>
        <item name="colorSecondaryVariant">@color/acc_grey_variant</item>
        <item name="colorOnSecondary">@color/acc_on_card</item>
        <item name="colorError">@color/acc_red</item>
        <item name="android:navigationBarColor">@color/system_bar</item>
    </style>

    <style name="Base.Theme.Acc" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="dialogCornerRadius">8dp</item>
        <item name="materialCardViewStyle">@style/Widget.App.MaterialCardView</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="android:statusBarColor">@color/system_bar</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

</resources>
